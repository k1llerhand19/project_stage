{% extends 'base.html.twig' %}

{% block title %}Processeur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-5">
                <h1>Processeur :</h1>
            </div>
        </div>
    </div> 
 
 
 <div class="col-lg-12">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="align-middle text-center" colspan="9">Processeur</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="align-middle text-center">
                        <th class="text-nowrap">Nom</th>
                        <th class="text-nowrap">Marque</th>
                        <th class="text-nowrap">Modele</th>               
                        <th class="text-nowrap">Support du processeur</th>
                        <th class="text-nowrap">Fréquence du CPU</th>
                        <th class="text-nowrap">Nombre de core</th>
                        <th class="text-nowrap">Nombre de threads</th>
                        <th class="text-nowrap">Actions</th>
                    </tr>
                    
                    {% for cpu in showcpu %}

                        <tr class="align-middle text-center">
                            <td class="text-nowrap">{{cpu.nom}}</td>
                            <td class="text-nowrap">{{cpu.marque}}</td>
                            <td class="text-nowrap">{{cpu.modele}}</td>
                            <td class="text-nowrap">{{cpu.supportcpu}} </td>
                            <td class="text-nowrap">{{cpu.frequencecpu}} GHz</td>
                            <td class="text-nowrap">{{cpu.nbrcore}}</td>
                            <td class="text-nowrap">{{cpu.nbrthreads}}</td>
                            <td class="text-nowrap">
                                <a href="{{ path('processeur.edit', {id: cpu.id}) }}">Modifier</a>

                                <form method="post" action="{{ path('processeur.delete', {id: cpu.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le processeur : \'{{ cpu.nom }}\' ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cpu.id) }}">
                                    <button class="btn btn-danger"> supprimer
                                        <span class="bi bi-trash-fill"></span>
                                    </button>
                                </form>

                            <span class="badge text-bg-danger"></span></td>
                        </tr>
                        
                    {% endfor %}
            </table>
        </div>
    </div
</div>
    
    <a href="{{ path('processeur.add')}}">Ajoutez</a>
{% endblock %}