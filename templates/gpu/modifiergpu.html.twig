{% extends 'base.html.twig' %}

{% block title %}Carte Graphique{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <h1>Carte Graphique</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
        <div class="col-4" id="colonne-1"></div>
            <div class="col 4" id="colonne-1">
                <br><br>
                <h2>Modifier :</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-4" id="colonne-1"></div>
            <div class="col-4" id="colonne-1">
                {{form_start(formgpu)}}

                {{form_row(formgpu.nom, {'attr' : {'placeholder' : "Désignation de la carte graphique"}})}}
                {{form_row(formgpu.marque, {'attr' : {'placeholder' : "Marque de la carte graphique"}})}}
                {{form_row(formgpu.modele, {'attr' : {'placeholder' : "Modele de la carte graphique"}})}}
                {{form_row(formgpu.chipsetgraphique, {'attr' : {'placeholder' : "Chipset graphique"}})}}
                {{form_row(formgpu.taillememoire, {'attr' : {'placeholder' : "Taille de la mémoire"}})}}
                {{form_row(formgpu.typememoire, {'attr' : {'placeholder' : "Type de mémoire"}})}}

                <button  type="submit" class="btn btn-success">
                        Enregistrer
                </button>

                {{form_end(formgpu)}}
            </div>
        </div>
      </div> 

{% endblock %}