{% extends 'base.html.twig' %}

{% block title %}SSD{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-5">
                <h1>SSD :</h1>
            </div>
        </div>
    </div> 
 
 
 <div class="col-lg-12">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="align-middle text-center" colspan="9">SSD</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="align-middle text-center">
                        <th class="text-nowrap">Nom</th>
                        <th class="text-nowrap">Marque</th>
                        <th class="text-nowrap">Modele</th>
                        <th class="text-nowrap">Capacité</th>
                        <th class="text-nowrap">Vitesse de lecture</th>
                        <th class="text-nowrap">Vitesse d'écriture</th>
                        <th class="text-nowrap">Actions</th>
                    </tr>

                   {% for ssd in showssd %}
                        <tr class="align-middle text-center">
                            <td class="text-nowrap">{{ssd.nom}}</td>
                            <td class="text-nowrap">{{ssd.marque}}</td>
                            <td class="text-nowrap">{{ssd.modele}}</td>
                            <td class="text-nowrap">{{ssd.capacite}} Go</td>
                            <td class="text-nowrap">{{ssd.vitesselecture}} Mo/s</td>
                            <td class="text-nowrap">{{ssd.vitesseecriture}} Mo/s</td>
                            <td class="text-nowrap"><a href="{{ path('ssd.edit', {id: ssd.id}) }}">Modifier</a>
                            <button onclick=#>Supprimer</button>
                            <span class="badge text-bg-danger"></span></td>
                        </tr>
                        
                    {% endfor %}
            </table>
        </div>
    </div
</div>
    
    <a href="{{ path('ssd.add')}}">Ajoutez</a>
{% endblock %}