{% extends 'base.html.twig' %}

{% block title %}Boitier{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-5">
                <h1>Boitier </h1>
            </div>
        </div>
    </div> 
 
 
    <div class="col-lg-12">
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="align-middle text-center" colspan="9">Alimentation</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <tr class="align-middle text-center">
                            <th class="text-nowrap">Nom</th>
                            <th class="text-nowrap">Marque</th>
                            <th class="text-nowrap">Modele</th>
                            <th class="text-nowrap">Format du boitier</th>
                            <th class="text-nowrap">Format de l'alimentation</th>
                            <th class="text-nowrap">Actions</th>
                        </tr>
                                    
                        </tr>
                {% for boitier in showboitier %}
                        <tr class="align-middle text-center">
                            <td class="text-nowrap">{{boitier.nom}}</td>
                            <td class="text-nowrap">{{boitier.marque}}</td>
                            <td class="text-nowrap">{{boitier.modele}}</td>
                            <td class="text-nowrap">{{boitier.formatboitier}}</td>
                            <td class="text-nowrap">{{boitier.formatalimentation}}</td>
                            <td class="text-nowrap"><a href="{{ path('boitier.edit', {id: boitier.id}) }}">Modifier</a>
                            
                            <form method="post" action="{{ path('boitier.delete', {id: boitier.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer l\'boitier : \'{{ boitier.nom }}\' ?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ boitier.id) }}">
                                    <button class="btn btn-danger"> supprimer
                                        <span class="bi bi-trash-fill"></span>
                                    </button>
                            </form>
                            
                            <span class="badge text-bg-danger"></span>
                        </td>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
    
    <a href="{{ path('boitier.add')}}">Ajoutez</a>

{% endblock %}